@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Watchtower</h1>
    <p class="lead">Your one-stop shop for quality products and seamless shopping experience.</p>
    <hr class="my-4">
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>Explore Our Products</h3>
            <p>Discover a wide range of quality products from top categories. Find what you need with ease!</p>
            <a href="/Products" class="btn btn-primary">View Products</a>
        </div>
        <div class="col-md-4">
            <h3>Fast and Reliable</h3>
            <p>Enjoy seamless shopping with fast delivery and a reliable user experience tailored for you.</p>
        </div>
